list = [1, 2]
total = 0
realtot = 0
n = 1
while (total<=4000000):
    x = (list[n-1]) 
    y = (list[n])
    add = x + y
    list.append(add)
    if add % 2 == 0:
        total += add
    n += 1
for e in list:
    if e % 2 == 0:
        realtot += e
print(list)
print(total)
print(realtot)


